{% set W = item.player_width  or 720 %}
{% set H = item.player_height or 480 %}

<div class="fanza-fixed-embed"
     style="width:100%;max-width:{{W}}px;aspect-ratio: {{W}} / {{H}};margin:0 auto;overflow:hidden;">
  <iframe
    src="{{ item.trailer_iframe_src | replace('size=1280_720','size=' ~ W ~ '_' ~ H) }}"
    width="{{ W }}" height="{{ H }}"
    style="width:100% !important;height:100% !important;display:block !important;border:0 !important;position:static !important;overflow:hidden;"
    scrolling="no" frameborder="0" allowfullscreen>
  </iframe>
</div>